# Database connection URL (replace with your own local or cloud MongoDB URI)
DB_URL="mongodb://127.0.0.1:27017/pace"

# JWT secrets (replace with your own secure random strings)
ACCESS_TOKEN_SECRET="your_access_token_secret_here"
REFRESH_TOKEN_SECRET="your_refresh_token_secret_here"

# Token expiry times
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=1d

# Refresh token endpoint path
REFRESH_TOKEN_PATH=/api/user/secretpath